{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings": {
        "import/resolver": {
            "node": { "extensions": [".mjs", ".js"] }
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:json/recommended",
        "plugin:import/recommended",
        "plugin:prettier/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "import/order": 2
    }
}
